{
  "name": "bottle-recycler",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "homepage": "https://rangerchris.github.io/BottleRecycler",
  "scripts": {
    "dev": "vite",
    "dev:coverage": "vite --mode coverage",
    "build": "tsc -b && vite build && tsc server.ts --outDir dist",
    "lint": "eslint .",
    "preview": "vite preview",
    "test": "npx playwright test --ui",
    "test:coverage": "npx playwright test",
    "run-tests-and-merge": "npx playwright test && node scripts/merge-coverage.js",
    "coverage": "start-server-and-test \"npm run dev:coverage\" http://localhost:5173 \"npm run run-tests-and-merge\"",
    "show-coverage": "npx playwright show-report coverage/report",
    "vitest:coverage": "vitest run --coverage",
    "vitest:coverage:open": "start .\\coverage\\vitest\\index.html",
    "start": "node dist/server.js",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d dist"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@mui/icons-material": "^7.3.2",
    "@mui/material": "^7.3.2",
    "express": "^5.1.0",
    "express-rate-limit": "^8.1.0",
    "react-dom": "^19.1.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@playwright/test": "^1.55.1",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.5.2",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "@types/testing-library__jest-dom": "^5.14.9",
    "@types/testing-library__react": "^10.0.1",
    "@vitejs/plugin-react": "^5.0.3",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "esbuild": "^0.25.10",
    "eslint": "^9.36.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.21",
    "gh-pages": "^6.3.0",
    "globals": "^16.4.0",
    "istanbul-lib-coverage": "^3.2.2",
    "istanbul-lib-report": "^3.0.1",
    "istanbul-reports": "^3.2.0",
    "jsdom": "^27.0.0",
    "nyc": "^17.1.0",
    "react": "^19.1.1",
    "start-server-and-test": "^2.1.2",
    "ts-node": "^10.9.2",
    "typescript": "5.9.2",
    "typescript-eslint": "^8.44.1",
    "vite": "^7.1.7",
    "vite-plugin-istanbul": "^3.0.4",
    "vitest": "^3.2.4"
  }
}
